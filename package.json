{
  "name": "@j0hanz/filesystem-context-mcp",
  "version": "1.3.8",
  "mcpName": "io.github.j0hanz/filesystem-context",
  "description": "ðŸ” Read-only MCP server for secure filesystem exploration, searching, and analysis",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "sideEffects": false,
  "bin": {
    "filesystem-context-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "validate:instructions": "node -e \"require('fs').accessSync('src/instructions.md')\"",
    "build": "tsc -p tsconfig.build.json && npm run validate:instructions && npm run copy:assets",
    "copy:assets": "node -e \"require('fs').copyFileSync('src/instructions.md', 'dist/instructions.md')\"",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "node --test --import tsx/esm \"src/__tests__/**/*.test.ts\"",
    "test:watch": "node --test --watch --import tsx/esm \"src/__tests__/**/*.test.ts\"",
    "test:coverage": "node --test --experimental-test-coverage --import tsx/esm \"src/__tests__/**/*.test.ts\"",
    "test:node": "node --test --import tsx/esm node-tests/errors-is-node-error.test.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc -p tsconfig.typecheck.json --noEmit",
    "bench": "tsx scripts/benchmarks.ts",
    "inspector": "npx @modelcontextprotocol/inspector",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "filesystem",
    "scanner",
    "search",
    "analysis"
  ],
  "author": "j0hanz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/j0hanz/filesystem-context-mcp-server.git"
  },
  "homepage": "https://github.com/j0hanz/filesystem-context-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "fast-glob": "^3.3.3",
    "re2": "^1.23.0",
    "safe-regex2": "^5.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^22.19.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
